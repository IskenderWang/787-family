		<object-name>doors.active</object-name>
		<condition>
 		<equals>
   			<property>controls/mfd2/page</property>
   			<value>doors</value>
  		</equals>
		</condition>
	</animation>

<model>
 <path>NAV.xml</path>
 <condition>
 <and>
  <equals>
   <property>controls/mfd2/page</property>
   <value>nav</value>
  </equals>
 </and>
 <and><not>
  <equals>
   <property>controls/mfd3/page</property>
   <value>nav</value>
  </equals>
 </not></and>
 </condition>
</model>

<model>
 <path>NDFULL.xml</path>
 <condition>
  <equals>
   <property>instrumentation/ndfull/active</property>
   <value>1</value>
  </equals>
 </condition>
</model>

<model>
 <path>CDU1.xml</path>
 <offsets>
	<pitch-deg>90.0</pitch-deg>
 </offsets>
 <condition>
  <equals>
   <property>controls/mfd2/page</property>
   <value>cdu</value>
  </equals>
 </condition>
</model>

<model>
 <path>ELEC.xml</path>
 <condition>
  <equals>
   <property>controls/mfd2/page</property>
   <value>elec</value>
  </equals>
 </condition>
</model>

