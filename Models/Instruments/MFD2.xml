<model>
 <path>DOORS.xml</path>
 <condition>
  <equals>
   <property>controls/mfd2/page</property>
   <value>doors</value>
  </equals>
 </condition>
</model>

    <animation>
        <type>pick</type>
        <object-name>cdu</object-name>
        <object-name>cdu.active</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-cycle</command>
                <property>controls/mfd2/page</property>
		<value>cdu</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>elec</object-name>
        <object-name>elec.active</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-cycle</command>
                <property>controls/mfd2/page</property>
		<value>elec</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>hyd</object-name>
        <object-name>hyd.active</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-cycle</command>
                <property>controls/mfd2/page</property>
		<value>hyd</value>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>pneu</object-name>
        <object-name>pneu.active</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-cycle</command>
                <property>controls/mfd2/page</property>
