<?xml version="1.0"?>

<PropertyList>

	<path>mfd-menu.ac</path>

<!-- Come on only when there's atleast 9 volts of power -->

	<animation>
		<type>select</type>
		<object-name>menu</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/efis</property>
				<value>9</value>
			</greater-than>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>intro</object-name>
		<condition>
 		<equals>
   			<property>controls/mfd2/page</property>
   			<value>intro</value>
  		</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>nav.active</object-name>
		<condition>
 		<equals>
   			<property>controls/mfd2/page</property>
   			<value>nav</value>
  		</equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>cdu.active</object-name>
		<condition>
