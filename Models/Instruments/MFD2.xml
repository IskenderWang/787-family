            <binding>
                <command>property-cycle</command>
                <property>controls/mfd2/page</property>
				<value>gear</value>
            </binding>
        </action>
    </animation>
    
    <animation>
		<type>select</type>
		<object-name>cam.active</object-name>
		<condition>
 		<equals>
   			<property>controls/mfd2/page</property>
   			<value>cam</value>
  		</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
