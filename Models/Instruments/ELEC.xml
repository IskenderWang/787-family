<?xml version="1.0"?>

<PropertyList>

	<path>elec.ac</path>

<!-- Come on only when there's atleast 9 volts of power -->

	<animation>
		<type>select</type>
		<object-name>elec</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/efis</property>
				<value>9</value>
			</greater-than>
		</condition>
	</animation>

<!-- Light Text -->

	<animation>
		<name>White text</name>
		<type>material</type>
		<object-name>white</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>

<!-- APU RPM -->

	<text><name>white</name>
		<offsets>
			<x-m>0.0001</x-m>
			<y-m>-0.0139</y-m>
			<z-m>0.0919</z-m>
		</offsets>
		<alignment>center-center</alignment>
		<axis-alignment>yz-plane</axis-alignment>
		<type type="string">number-value</type>
		<format type="string">%3.0fÂ°</format>
		<property>engines/APU/rpm</property>
		<font>courier-bold.txf</font>
		<character-size>0.01</character-size>
		<character-aspect-ratio type="double">1.5</character-aspect-ratio>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
	</text>

<!-- Select Animations -->

	<animation>
		<type>select</type>
		<object-name>apugen</object-name>
		<condition>
				<property>controls/electric/APU-generator</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>extpwr</object-name>
		<condition>
				<property>controls/electric/external-power</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>lbus</object-name>
		<condition>
				<property>controls/electric/engine[0]/bus-tie</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>rbus</object-name>
		<condition>
				<property>controls/electric/engine[1]/bus-tie</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>lgen</object-name>
		<condition>
				<property>controls/electric/engine/generator</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>rgen</object-name>
		<condition>
				<property>controls/electric/engine[1]/generator</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>bgenl</object-name>
		<condition>
				<property>controls/electric/engine/backup-generator</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>bgenr</object-name>
		<condition>
				<property>controls/electric/engine[1]/backup-generator</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>apu.avail</object-name>
		<condition>
				<property>engines/APU/running</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>apu.spool</object-name>
		<condition>
			<equals>
				<property>controls/APU/off-start-run</property>
				<value>1</value>
			</equals>
			<less-than>	
				<property>engines/APU/rpm</property>
				<value>100</value>
			</less-than>	
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>apu.started</object-name>
		<condition>
			<equals>
				<property>controls/APU/off-start-run</property>
				<value>1</value>
			</equals>
			<equals>	
				<property>engines/APU/rpm</property>
				<value>100</value>
			</equals>	
		</condition>
	</animation>

</PropertyList>
