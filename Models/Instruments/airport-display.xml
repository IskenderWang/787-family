<?xml version="1.0"?>


<PropertyList>
    <name>Airport Chart</name>
    <w-base>512</w-base>
    <h-base>512</h-base>

    <layers>

        <layer>
            <name>ground network</name>
            <texture>
                <path>Aircraft/Instruments/Textures/od_groundradar.rgb</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
   			<transformations>
				<transformation>
				 	<type>rotation</type>
				 	<property>orientation/heading-deg</property>
				 	<scale>-1</scale>
				</transformation>	
				<transformation>
     				<type>x-shift</type>
     				<property>instrumentation/ndfull/airport/xoffset</property>
     				<scale>200</scale>
    			</transformation>	
				<transformation>
     				<type>y-shift</type>
     				<property>instrumentation/ndfull/airport/yoffset</property>
     				<scale>200</scale>
    			</transformation>
			</transformations>
            <emissive>1</emissive>
            <w>512</w>
            <h>512</h>
        </layer>


    </layers>

</PropertyList>
