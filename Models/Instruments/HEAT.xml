<?xml version="1.0"?>

<PropertyList>

	<path>heat.ac</path>

<!-- Come on only when there's atleast 9 volts of power -->

	<animation>
		<type>select</type>
		<object-name>heat</object-name>
		<condition>
			<greater-than>
				<property>systems/electrical/outputs/efis</property>
				<value>9</value>
			</greater-than>
		</condition>
	</animation>

<!-- Light Text -->

	<animation>
		<name>White text</name>
		<type>material</type>
		<object-name>white</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>

<!-- APU RPM -->

	<text><name>white</name>
		<offsets>
			<x-m>0.0001</x-m>
			<y-m>-0.0380</y-m>
