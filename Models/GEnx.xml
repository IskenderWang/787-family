  <z-m>-.085</z-m>
  <heading-deg>0</heading-deg>
 </offsets>
</model>

<model>
 <path>Aircraft/787-family/Models/Effects/smoke.xml</path>
 <condition>
 	<or>
	<equals>
		<property>controls/fires/fire[1]/phase</property>
