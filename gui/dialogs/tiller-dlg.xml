<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<name>tiller-dlg</name>
	<layout>vbox</layout>
	<draggable>true</draggable>
	<resizable>false</resizable>

	<nasal>
		<open>
			props.globals.initNode("sim/gui/dialogs/tiller-dlg/value", 0);
			setprop("controls/gear/tiller-cmd-norm", 0.0);
			setprop("controls/gear/enable-tiller", 1);
		</open>
		<close>
			props.globals.initNode("sim/gui/dialogs/tiller-dlg/value", 0);
			setprop("controls/gear/tiller-cmd-norm", 0.0);
			setprop("controls/gear/enable-tiller", 0);
		</close>
	</nasal>

	<group>
		<layout>hbox</layout>

		<text>
			<label>Tiller steering</label>
		</text>

		<empty>
			<stretch>1</stretch>
		</empty>

		<button>
			<legend />
			<key>Esc</key>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

	<hrule />

	<group>
		<stretch>true</stretch>
		<layout>vbox</layout>
		<halign>left</halign>
		<valign>top</valign>
		<padding>5</padding>
		<pref-width>300</pref-width>

		<group>
			<layout>hbox</layout>
			<halign>center</halign>

			<text>
				<pref-width>30</pref-width>
				<property>sim/gui/dialogs/tiller-dlg/value</property>
				<format>%2.1f</format>
				<live>true</live>
			</text>
			<text>
				<pref-width>30</pref-width>
				<label>degrees</label>
			</text>
		</group>

		<slider>
			<min>-70</min>
			<max>70</max>
			<pref-width>290</pref-width>
			<property>sim/gui/dialogs/tiller-dlg/value</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>nasal</command>
				<script><![CDATA[
						setprop(
							"controls/gear/tiller-cmd-norm",
							getprop("sim/gui/dialogs/tiller-dlg/value") / 70.0
						);
					]]>
				</script>
			</binding>
			<live type="bool">true</live>
		</slider>

		<button>
			<legend>Center</legend>
			<binding>
				<command>property-assign</command>
				<property>controls/gear/tiller-cmd-norm</property>
				<value>0</value>
			</binding>
			<binding>
				<command>property-assign</command>
				<property>sim/gui/dialogs/tiller-dlg/value</property>
				<value>0</value>
			</binding>
			<binding>
				<command>dialog-update</command>
			</binding>
		</button>
	</group>

	<text>
		<label>Tiller controlled via slider when this dialog is open.</label>
	</text>
	<text>
		<label>Controlled via rudder up to 7 degrees when closed.</label>
	</text>
</PropertyList>
