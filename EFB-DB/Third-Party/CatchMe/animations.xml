<?xml version="1.0"?>

<PropertyList>

	<path>model.ac</path>
	
	<animation>
		<type>select</type>
		<object-name>white</object-name>
		<condition>
			<equals>
				<property>/instrumentation/efb/catchme/color</property>
				<value>white</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>red</object-name>
		<condition>
			<equals>
				<property>/instrumentation/efb/catchme/color</property>
				<value>red</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>green</object-name>
		<condition>
			<equals>
				<property>/instrumentation/efb/catchme/color</property>
				<value>green</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>white</object-name>
		<action>
			<button>0</button>
				<binding>
				<command>nasal</command>
					<script>
						setprop("/instrumentation/efb/catchme/score", getprop("/instrumentation/efb/catchme/score") + 1);
					</script>
				</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>green</object-name>
		<action>
			<button>0</button>
				<binding>
				<command>nasal</command>
					<script>
						setprop("/instrumentation/efb/catchme/score", getprop("/instrumentation/efb/catchme/score") + 5);
					</script>
				</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>red</object-name>
		<action>
			<button>0</button>
				<binding>
				<command>nasal</command>
					<script>
						setprop("/instrumentation/efb/catchme/score", getprop("/instrumentation/efb/catchme/score") - 5);
					</script>
				</binding>
		</action>
	</animation>
	
	<!-- Move the Ball -->
	
	<animation>
		<type>translate</type>
		<object-name>white</object-name>
		<object-name>green</object-name>
		<object-name>red</object-name>
		<property>/instrumentation/efb/catchme/y</property>
		<factor>0.0117</factor>
		<axis>
			<x>-1</x>
		</axis>
	</animation>
	
	<animation>
		<type>translate</type>
		<object-name>white</object-name>
		<object-name>green</object-name>
		<object-name>red</object-name>
		<property>/instrumentation/efb/catchme/x</property>
		<factor>0.012</factor>
		<axis>
			<y>1</y>
		</axis>
	</animation>
	
	<!-- Timer -->
	
	<animation>
		<type>textranslate</type>
		<object-name>timer</object-name>
		<property>/instrumentation/efb/catchme/timer-norm</property>
		<factor>0.5</factor>
		<axis>
			<y>1</y>
		</axis>
	</animation>

</PropertyList>
