                </less-than>
                <and>
                    <or>
                        <property>gear/gear[0]/wow</property>
                        <property>gear/gear[1]/wow</property>
                        <property>gear/gear[2]/wow</property>
                    </or>
                </and>
                <and>
                    <less-than>
                        <property alias="/params/airspeed-kt" />
                        <property>/it-autoflight/internal/kts-predicted-5</property>
                    </less-than>
                </and>
            </condition>
        </callout>

        <callout>
            <name>V2</name>
            <mode>once</mode>
            <type>avionics</type>
            <path>Aircraft/787-family/Sounds/v2.wav</path>
            <condition>
                <greater-than>
                    <!-- Don't bother with a V2 callout if the gears are fully retracted, another measure to restrict to takeoff only -->
                    <property>/gear/gear/position-norm</property>
                    <value type="double">0</value>
