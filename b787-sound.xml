        <apu-start>
            <name>apu-strt</name>
            <mode>once</mode>
            <path>Aircraft/787-family/Sounds/apu_strt.wav</path>
            <condition>
                <equals>
                    <property>controls/APU/off-start-run</property>
                    <value>1</value>
                </equals>
                <less-than>
                    <property>engines/APU/rpm</property>
                    <value>100</value>
                </less-than>
            </condition>
            <position>
                <x>30</x>

                <z>2</z>
            </position>
            <reference-dist>30</reference-dist>
            <max-dist>100</max-dist>
            <volume>
                <property>engines/APU/rpm</property>
                <factor>0.01</factor>
            </volume>
        </apu-start>

        <apu-running2>
            <name>apu-run2</name>
