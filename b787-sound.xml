        <callout>
            <name>V1</name>
            <mode>once</mode>
            <type>avionics</type>
            <path>Aircraft/787-family/Sounds/v1.wav</path>
            <condition>
                <greater-than-equals>
                    <property alias="/params/airspeed-kt" />
                    <property>instrumentation/fmc/vspeeds/V1</property>
                </greater-than-equals>
                <less-than>
                    <property alias="/params/airspeed-kt" />
                    <property>instrumentation/fmc/vspeeds/VR</property>
                </less-than>
                <and>
                    <!-- If you're in the air with no gears on the ground (weight on wheels), V1 & VR won't be relevant to you -->
                    <or>
                        <property>gear/gear[0]/wow</property>
                        <property>gear/gear[1]/wow</property>
                        <property>gear/gear[2]/wow</property>
                    </or>
                </and>
                <and>
                    <less-than>
                        <property alias="/params/airspeed-kt" />
                        <property>/it-autoflight/internal/kts-predicted-5</property>
                    </less-than>
                </and>
            </condition>
        </callout>

        <callout>
            <name>VR</name>
            <mode>once</mode>
            <type>avionics</type>
            <path>Aircraft/787-family/Sounds/vr.wav</path>
            <condition>
                <greater-than-equals>
                    <property alias="/params/airspeed-kt" />
                    <property>instrumentation/fmc/vspeeds/VR</property>
                </greater-than-equals>
                <less-than>
                    <property alias="/params/airspeed-kt" />
