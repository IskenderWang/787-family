<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<name>lights</name>
	<layout>vbox</layout>

	<text>
		<label>Dual Control System</label>
	</text>

	<hrule />

		<checkbox>
			<label>Enable Dual Control</label>
			<property>/dualcontrol/enable</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>false</live>
		</checkbox>

            <group>
                <layout>table</layout>

                <text>
                    <label>Connect to</label>
                    <halign>right</halign>
                    <row>0</row>
                    <col>0</col>
                </text>

                <input>
                    <row>0</row>
                    <col>1</col>
                    <property>/dualcontrol/connectto-callsign</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>

                <text>
                    <label>Password</label>
                    <halign>right</halign>
                    <row>1</row>
                    <col>0</col>
                </text>

                <input>
                    <row>1</row>
                    <col>1</col>
                    <property>/dualcontrol/connection-auth</property>
                    <live>true</live>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                </input>

			</group>

		<button>
			<legend>Connect</legend>
			<default>true</default>
		<padding>10</padding>
			<binding>
				<command>nasal</command>
				<script>
					b787.dc_tools.connect();
				</script>
			</binding>
		</button>

	<hrule />

		<button>
			<legend>Close</legend>
			<default>true</default>
			<key>Esc</key>
		<padding>10</padding>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

</PropertyList>
