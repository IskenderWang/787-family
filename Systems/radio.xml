            </binding>
        </dial>

        <checkbox>
            <row>2</row>
            <col>5</col>
            <property>/instrumentation/nav/ident</property>
        </checkbox>

        <input>
            <row>2</row>
            <col>6</col>
            <property>/instrumentation/nav[0]/radials/selected-deg</property>
            <binding>
                <command>dialog-apply</command>
            </binding>
            <binding>
                <command>dialog-update</command>
            </binding>
        </input>

<!--         NAV 2          -->

        <text>
            <row>3</row>
            <col>0</col>
            <label>Nav2</label>
        </text>

        <text>
            <row>3</row>
            <col>1</col>
            <label>999.999</label>
