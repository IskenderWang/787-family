        </input>

        <dial>
            <row>1</row>
            <col>4</col>
            <pref-width>30</pref-width>
            <pref-height>30</pref-height>
            <property>/instrumentation/comm[1]/volume</property>
            <min>0.0</min>
            <max>1.0</max>
            <wrap>false</wrap>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </dial>

<!--         NAV 1          -->

        <text>
            <row>2</row>
            <col>0</col>
            <label>Nav1</label>
        </text>

        <text>
            <row>2</row>
