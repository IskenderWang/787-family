<?xml version="1.0"?>


<PropertyList>
    <name>WXRadar Echo Main</name>
    <w-base>512</w-base>
    <h-base>1024</h-base>

    <layers>

        <layer>
            <name>storm1-single_cell-low_precip</name>
            <texture>
                <path>Aircraft/787-8/Models/Instruments/wxstorm.png</path>
                <x1>0</x1>
                <y1>512</y1>
                <x2>171</x2>
                <y2>384</y2>
            </texture>
			<condition>
				<and>
					<property>instrumentation/wxradar/storm[0]/show</property>
					<equals>
						<property>instrumentation/wxradar/storm[0]/x_textranslate</property>
						<value>0</value>
					</equals>
					<equals>
						<property>instrumentation/wxradar/storm[0]/y_textranslate</property>
						<value>0</value>
					</equals>
				</and>
			</condition>
   			<transformations>
				<transformation>
				 	<type>rotation</type>
				 	<property>orientation/heading-deg</property>
				 	<scale>-1</scale>
				</transformation>	
				<transformation>
     				<type>y-shift</type>
     				<property>instrumentation/wxradar/storm[0]/distance</property>
     				<scale>15.4</scale>
    			</transformation>
				<transformation>
				 	<type>rotation</type>
				 	<property>orientation/heading-deg</property>
				 	<scale>1</scale>
				</transformation>
				<transformation>
				 	<type>rotation</type>
				 	<property>instrumentation/wxradar/storm[0]/heading-deg</property>
				 	<scale>1</scale>
				</transformation>	
			</transformations>
            <emissive>1</emissive>
            <w-prop>/instrumentation/wxradar/storm[0]/width-px</w-prop>
            <h-prop>/instrumentation/wxradar/storm[0]/width-px</h-prop>
        </layer>


    </layers>

</PropertyList>
