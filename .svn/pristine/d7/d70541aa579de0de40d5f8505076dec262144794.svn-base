<?xml version="1.0"?>

<PropertyList>

	<path>cam.ac</path>
	
	<animation>
		<type>select</type>
		<object-name>cam</object-name>
		<condition>
			<greater-than-equals>
				<property>systems/electrical/outputs/efis</property>
				<value>9</value>
			</greater-than-equals>
		</condition>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>sel_click</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
				 b787.doors.toggle("cam_menu");
				</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>tailcam_click</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>controls/mfd-cam/view</property>
				<value>tail</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>gearcam_click</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>controls/mfd-cam/view</property>
				<value>gear</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>leftwing_click</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>controls/mfd-cam/view</property>
				<value>lwing</value>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>rightwing_click</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>nasal</command>
				<script>
					if (getprop("/sim/model/door-positions/cam_menu/position-norm") == 1)
						setprop("/controls/mfd-cam/view", "rwing");
					else
						b787.doors.toggle("cam_menu");
				</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>textranslate</type>
		<object-name>cam_menu</object-name>
		<object-name>tailcam_active</object-name>
		<object-name>gearcam_active</object-name>
		<object-name>leftwing_active</object-name>
		<object-name>rightwing_active</object-name>
		<property>sim/model/door-positions/cam_menu/position-norm</property>
		<factor>0.418</factor>
		<axis>
			<y>-1</y>
		</axis>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>tailcam_active</object-name>
		<condition>
			<equals>
				<property>controls/mfd-cam/view</property>
				<value>tail</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>gearcam_active</object-name>
		<condition>
			<equals>
				<property>controls/mfd-cam/view</property>
				<value>gear</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>leftwing_active</object-name>
		<condition>
			<equals>
				<property>controls/mfd-cam/view</property>
				<value>lwing</value>
			</equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>rightwing_active</object-name>
		<condition>
			<equals>
				<property>controls/mfd-cam/view</property>
				<value>rwing</value>
			</equals>
		</condition>
	</animation>

</PropertyList>
