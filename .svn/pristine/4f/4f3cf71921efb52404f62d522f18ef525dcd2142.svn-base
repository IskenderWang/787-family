<?xml version="1.0"?>
<PropertyList>
<name>autopilot-dlg</name>
<layout>vbox</layout>

	<text>
		<label>Mode Control Dialog</label>
	</text>

	<hrule/>
	
	<!-- Mode Control -->
	
	<group>
	<layout>hbox</layout>
	
		<group>
		<layout>vbox</layout>
		
			<button>
				<legend>AP</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						if (getprop("autopilot/panel/master") == 1)
							setprop("autopilot/panel/master", 0);
						else
							setprop("autopilot/panel/master", 1);
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
			
			<button>
				<legend>FD</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						if (getprop("autopilot/flightdirector") == 1)
							setprop("autopilot/flightdirector", 0);
						else
							setprop("autopilot/flightdirector", 1);
					</script>
				</binding>
				<binding>
		    		<command>dialog-apply</command>
		   		</binding>
			</button>
		
		</group>
		
		<vrule />
		
		<group>
		<layout>vbox</layout>
		
			<text>
				<label>A/T ARM</label>
			</text>
		
			<group>
			<layout>hbox</layout>

				<group>
				<layout>vbox</layout>

					<text>
						<label>L</label>
					</text>
					
					<checkbox>
						<width>16</width>
						<height>16</height>
						<property>/autopilot/panel/larm</property>
						<live>true</live>
						<binding>
        	<command>dialog-apply</command>
        </binding>
					</checkbox>
			
				</group>
				
				<group>
				<layout>vbox</layout>

					<text>
						<label>R</label>
					</text>
					
					<checkbox>
						<width>16</width>
						<height>16</height>
						<property>/autopilot/panel/rarm</property>
						<live>true</live>
						<binding>
        	<command>dialog-apply</command>
        </binding>
					</checkbox>
			
				</group>	
			
			</group>
			
			<button>
				<legend>CLB</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/settings/vertical-speed-fpm", getprop("/velocities/vertical-speed-fps") * 60);
 					
 						setprop("/autopilot/panel/alt", "vs");
					</script>
				</binding>
				<binding>
		    		<command>dialog-apply</command>
		   		</binding>
			</button>
			
			<button>
				<legend>A/T</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						if (getprop("autopilot/panel/auto-throttle") == 1)
							setprop("autopilot/panel/auto-throttle", 0);
						else
							setprop("autopilot/panel/auto-throttle", 1);
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
		
		</group>
		
		<vrule />
		
		<group>
		<layout>vbox</layout>
		
			<text>
				<label>SPD</label>
			</text>
			
			<group>
			<layout>table</layout>
		
			<input>
				<name>ias_input</name>
				<row>0</row>
				<col>0</col>
				<width>100</width>
				<height>25</height>
				<property>/autopilot/settings/target-speed-kt</property>
				<live>true</live>
				<visible>
					<equals>
						<property>/autopilot/panel/speed-mode</property>
						<value>ias</value>
					</equals>
				</visible>
				<binding>
        	<command>dialog-apply</command>
        	<object-name>ias_input</object-name>
        </binding>
			</input>
			
			<input>
				<name>mach_input</name>
				<row>0</row>
				<col>0</col>
				<width>100</width>
				<height>25</height>
				<property>/autopilot/settings/mach-speed</property>
				<live>true</live>
				<visible>
					<equals>
						<property>/autopilot/panel/speed-mode</property>
						<value>mach</value>
					</equals>
				</visible>
				<binding>
					<command>dialog-apply</command>
					<object-name>mach_input</object-name>
				</binding>
			</input>
			
			</group>
			
			<group>
			<layout>table</layout>
			
			<dial>
				<row>0</row>
				<col>0</col>
				<name>ias_dial</name>
				<width>32</width>
				<property>/autopilot/settings/target-speed-kt</property>
				<live>true</live>
				<visible>
					<equals>
						<property>/autopilot/panel/speed-mode</property>
						<value>ias</value>
					</equals>
				</visible>
				<min>0</min>
				<max>340</max>
				<binding>
					<command>dialog-apply</command>
					<object-name>ias_dial</object-name>
				</binding>
			</dial>
			
			<dial>
				<row>0</row>
				<col>0</col>
				<name>mach_dial</name>
				<width>32</width>
				<property>/autopilot/settings/mach-speed</property>
				<live>true</live>
				<visible>
					<equals>
						<property>/autopilot/panel/speed-mode</property>
						<value>mach</value>
					</equals>
				</visible>
				<min>0</min>
				<max>0.9</max>
				<binding>
					<command>dialog-apply</command>
					<object-name>mach_dial</object-name>
				</binding>
			</dial>
			
			</group>
			
			<button>
				<legend>MODE</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						if (getprop("/autopilot/panel/speed-mode") == "mach")
							setprop("/autopilot/panel/speed-mode", "ias");
						else
							setprop("/autopilot/panel/speed-mode", "mach");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
		
		</group>

		<vrule />
		
<!--		<group>
		<layout>vbox</layout>
		
			<text>
				<label>MACH</label>
			</text>
			
			<input>
				<width>100</width>
				<height>25</height>
				<property>/autopilot/settings/mach-speed</property>
				<live>true</live>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</input>
			
				<dial>
				<width>32</width>
				<property>/autopilot/settings/mach-speed</property>
				<live>true</live>
				<min>0</min>
				<max>0.9</max>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</dial>
			
			<button>
				<legend>MACH</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/speed-mode", "mach");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
		
		</group>

		<vrule /> -->
		
		<group>
		<layout>vbox</layout>
		
			<button>
				<legend>LNAV</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/hdg", "lnav");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
			
			<button>
				<legend>VNAV</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/alt", "vnav");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
			
			<button>
				<legend>FLCH</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/alt", "alt");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
		
		</group>
		
		<vrule />
		
		<group>
		<layout>vbox</layout>
		
			<text>
				<label>HDG</label>
			</text>
			
			<input>
				<name>hdg_input</name>
				<width>100</width>
				<height>25</height>
				<property>/autopilot/settings/heading-bug-deg</property>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
					<object-name>hdg_input</object-name>
				</binding>
			</input>
			
			<dial>
				<name>hdg_dial</name>
				<width>32</width>
				<property>/autopilot/settings/heading-bug-deg</property>
				<live>true</live>
				<min>0</min>
				<max>360</max>
				<binding>
					<command>dialog-apply</command>
					<object-name>hdg_dial</object-name>
				</binding>
			</dial>
			
			<button>
				<legend>HOLD</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/hdg", "hdg");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
		
		</group>
		
		<vrule />
		
		<group>
		<layout>vbox</layout>
		
			<text>
				<label>V/S</label>
			</text>
			
			<input>
				<name>vs_input</name>
				<width>100</width>
				<height>25</height>
				<property>/autopilot/settings/vertical-speed-fpm</property>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
					<object-name>vs_input</object-name>
				</binding>
			</input>
			
			<dial>
				<name>vs_dial</name>
				<width>32</width>
				<property>/autopilot/settings/vertical-speed-fpm</property>
				<live>true</live>
				<min>-3000</min>
				<max>3000</max>
				<binding>
					<command>dialog-apply</command>
					<object-name>vs_dial</object-name>
				</binding>
			</dial>
			
			<button>
				<legend>V/S</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/alt", "vs");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
		
		</group>
		
		<vrule />
		
		<group>
		<layout>vbox</layout>
		
			<text>
				<label>ALT</label>
			</text>
			
			<input>
				<name>alt_input</name>
				<width>100</width>
				<height>25</height>
				<property>/autopilot/settings/target-altitude-ft</property>
				<live>true</live>
				<binding>
					<command>dialog-apply</command>
					<object-name>alt_input</object-name>
				</binding>
			</input>
			
			<dial>
				<name>alt_dial</name>
				<width>32</width>
				<property>/autopilot/settings/target-altitude-ft</property>
				<live>true</live>
				<min>0</min>
				<max>41000</max>
				<binding>
					<command>dialog-apply</command>
					<object-name>alt_dial</object-name>
				</binding>
			</dial>
			
			<button>
				<legend>HOLD</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/alt", "alt");
					</script>
				</binding>
				<binding>
        	<command>dialog-apply</command>
        </binding>
			</button>
		
		</group>
		
		<vrule />
		
		<group>
		<layout>vbox</layout>
		
			<button>
				<legend>AP</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						if (getprop("autopilot/panel/master") == 1)
							setprop("autopilot/panel/master", 0);
						else
							setprop("autopilot/panel/master", 1);
					</script>
				</binding>
			</button>
			
			<button>
				<legend>LOC</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/hdg", "loc");
					</script>
				</binding>
			</button>
			
			<button>
				<legend>APP</legend>
				<padding>2</padding>
				<binding>
					<command>nasal</command>
					<script>
						setprop("/autopilot/panel/alt", "app");
					</script>
				</binding>
			</button>
		
		</group>
	
	</group>
	
	<hrule />
	
	<!-- Mode Display -->
	
	<group>
	<layout>hbox</layout>

		<group>
		<layout>hbox</layout>
		
			<text>
        <border>1</border>
        <label>99999999</label>
        <halign>center</halign>
        <property>autopilot/dialog/ap</property>
        <live>true</live>
      </text>
      <vrule />
      
      <text>
        <border>1</border>
        <label>99999999</label>
        <halign>center</halign>
        <property>autopilot/dialog/at</property>
        <live>true</live>
      </text>
      <vrule />
      
      <text>
        <border>1</border>
        <label>99999999</label>
        <halign>center</halign>
        <property>autopilot/dialog/fd</property>
        <live>true</live>
      </text>
      <vrule />
      
      <text>
        <border>1</border>
        <label>99999999</label>
        <halign>center</halign>
        <property>autopilot/dialog/alt</property>
        <live>true</live>
      </text>
      <vrule />
      
      <text>
        <border>1</border>
        <label>99999999</label>
        <halign>center</halign>
        <property>autopilot/dialog/hdg</property>
        <live>true</live>
      </text>
      <vrule />
      
      <text>
        <border>1</border>
        <label>99999999</label>
        <halign>center</halign>
        <property>autopilot/dialog/spd</property>
        <live>true</live>
      </text>  
		
		</group>

		<button>
			<legend>Close</legend>
			<default>true</default>
			<key>Esc</key>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>

	</group>

</PropertyList>
